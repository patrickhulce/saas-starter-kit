{
  "private": true,
  "name": "@the-product/firebase",
  "version": "0.1.0",
  "main": "./dist/firebase-app/lib/entry-development.js",
  "scripts": {
    "start": "concurrently './scripts/build-firebase.js --watch' 'tsc -w' 'cd dist-firebase && firebase serve'",
    "deploy": "NODE_ENV=firebase-production npm run build && cd dist-firebase && firebase deploy",
    "logs": "firebase functions:log",
    "build": "./scripts/build-firebase.js && tsc",
    "build:watch": "concurrently './scripts/build-firebase.js --watch' 'tsc -w'",
    "test": "/usr/bin/true",
    "test:lint": "/usr/bin/true",
    "test:unit": "/usr/bin/true"
  },
  "dependencies": {
    "firebase-admin": "^5.12.0",
    "firebase-functions": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "watch": "^1.0.2"
  }
}
