{
  "functions": {
    "source": "./",
    "predeploy": "test -e dist/firebase-app/lib/entry.js && test -e node_modules/express && grep 'entry.js' package.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
