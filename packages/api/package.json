  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.1",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/morgan": "^1.7.35",
    "@types/sparkpost": "^2.1.3",
