{
  "private": true,
  "name": "@the-product/frontend",
  "version": "0.1.0",
  "scripts": {
    "start": "START_API=true node server.js",
    "clean": "rm -rf dist/",
    "build": "NODE_ENV=production webpack --mode production",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "lint -t typescript './src/**/*.tsx'",
    "test:unit": "jest"
  },
  "config": {
    "tslint": {
      "rules": {
        "ordered-imports": false,
        "prefer-function-over-method": false,
        "no-submodule-imports": [
          true,
          "material-ui"
        ],
        "quotemark": [
          true,
          "single",
          "jsx-double",
          "avoid-escape"
        ],
        "no-implicit-dependencies": false,
        "no-unsafe-any": false
      }
    }
  },
  "dependencies": {
    "firebase": "^4.12.1",
    "firebaseui": "^2.7.0",
    "klay": "2.5.0-alpha.84196bee",
    "loading-page": "^1.0.1",
    "material-ui": "^1.0.0-beta.43",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.1.2",
    "@types/jest": "^22.2.2",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^5.0.6",
    "awesome-typescript-loader": "^5.0.0",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "extract-loader": "^2.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.18.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.8.3",
    "react-testing-library": "^3.0.2",
    "sass-loader": "^7.0.1",
    "script-ext-html-webpack-plugin": "^2.0.1",
    "shelljs": "^0.8.1",
    "style-loader": "^0.21.0",
    "tree-kill": "^1.2.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.22.1"
  }
}
