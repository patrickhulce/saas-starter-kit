{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "preserveWatchOutput": true,
    "jsx": "react",

    "strict": true,
    // Remove when https://github.com/firebase/firebase-functions/pull/215 is published
    "noImplicitAny": false,
  },
  "exclude": [
    "**/node_modules/",
    "**/dist/",
    "**/dist-firebase/",
    "**/*.test.ts"
  ]
}
