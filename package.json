{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bump-klay": "lerna exec --concurrency 1 'yarn add --exact --force klay@next'",
    "build": "lerna run build --scope '@the-product/firebase-app'",
    "test": "npm run build && npm run test:lint && npm run test:unit",
    "test:lint": "lerna run test:lint --concurrency 1",
    "test:unit": "jest",
    "test:e2e": "cd packages/e2e && yarn start"
  },
  "devDependencies": {
    "firebase-tools": "^3.18.4",
    "jest-junit": "^3.6.0",
    "lerna": "^2.9.1",
    "shelljs": "^0.8.1"
  }
}
